<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Emarket" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_50</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="Theme.Emarket" parent="Base.Theme.Emarket" />

    <style name="TransparentBottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <!-- Sets the bottom sheet's background to transparent -->
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <!-- Ensures the background is transparent -->
        <item name="android:background">@android:color/transparent</item>
        <!-- Optional: Disable background dimming -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="TransparentBottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="theme">@style/Theme.Emarket</item>
        <item name="bottomSheetStyle">@style/TransparentBottomSheetDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>